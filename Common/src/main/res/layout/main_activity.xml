<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main_activity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_TXV_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="1"
            android:shadowColor="@color/md_light_blue_900"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Add: "
            android:textColor="@color/md_light_blue_900"
            android:textSize="30dp" />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/main_TXV_sub_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:hint="Enter Title"
                android:shadowColor="#674188"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/main_EDT_description"
                android:layout_width="200dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:maxLines="2"
                android:minLines="1"
                android:shadowColor="#674188"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:hint="Enter description"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
             />

            <Button
                android:id="@+id/main_BTN_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"

                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Save"
                android:background="@color/md_light_blue_900"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />



        </LinearLayout>

    </LinearLayout>







</LinearLayout>
